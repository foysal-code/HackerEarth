
#include <bits/stdc++.h>
using namespace std;
int main ()
{
     long long int A[10005];
     int M, N;
     cin>>N>>M;
     for(int i=0; i<N; i++){
          cin>>A[i];
     }
     int result = -1; //boolean cheak;
     for(int i=0; i<N; i++){
          if(A[i]==M)
               result=i+1;
               break;
     }
     cout<<result<<endl;
     return 0;
}
